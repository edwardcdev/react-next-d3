{
  "extends": ["eslint:recommended", "plugin:lodash/canonical"],

  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },

  "plugins": ["lodash"],

  "globals": {
    "_": true,
    "fetch": true
  },

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "rules": {
    "no-console": "off",
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "[iI]gnored", "argsIgnorePattern": "^next$" }
    ],
    "lodash/prefer-constant": "off"
  }
}
